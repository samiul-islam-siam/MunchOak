<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.login.ProfileController"
            prefHeight="600.0" prefWidth="800.0">

    <VBox spacing="10" alignment="TOP_LEFT" layoutX="20" layoutY="20">
        <Label text="User Profile" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="usernameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="nameLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="addressLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="phoneLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Country:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="countryLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Language:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label fx:id="languageLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Times Logged In:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <Label fx:id="loginCountLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Items Purchased:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
            <Label fx:id="itemsPurchasedLabel" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>
</AnchorPane>
