<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:id="stackPane"
           fx:controller="com.example.munchoak.FrontPageController"
           prefWidth="800" prefHeight="600">

    <!-- Full Background -->
    <ImageView fx:id="background"
               preserveRatio="false">
        <image>
            <Image url="@images/front_bg.png"/>
        </image>
    </ImageView>

    <!-- Centered Title -->
    <Label text="WELCOME TO MUNCHOAK"
           style="-fx-font-size: 50; -fx-font-weight: bold; -fx-text-fill: blue;"
           StackPane.alignment="CENTER"/>

    <!-- Bottom-right Next Button -->
    <Button text="NEXT"
            onAction="#handleNextButton"
            style="-fx-background-color: #2E8B57; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 10 20;"
            StackPane.alignment="BOTTOM_RIGHT"
            translateX="-30" translateY="-30"/>
</StackPane>
