<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.shape.Rectangle?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.login.RegisterController"
           prefWidth="800" prefHeight="600"
           stylesheets="@styles/register.css">

    <!-- Background Image -->
    <ImageView fitWidth="800" fitHeight="600" preserveRatio="false">
        <image>
            <Image url="@images/register_bg.png"/>
        </image>
    </ImageView>

    <!-- Semi-transparent overlay -->
    <Rectangle width="800" height="600" fill="#00000055"/>

    <!-- Centered form container -->
    <VBox alignment="CENTER" spacing="15" maxWidth="400"
          style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 15;">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
        <Label text="Create Account"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <TextField fx:id="usernameField" promptText="Username" prefHeight="40"
                   style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
        <TextField fx:id="emailField" promptText="Email" prefHeight="40"
                   style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
        <PasswordField fx:id="passwordField" promptText="Password" prefHeight="40"
                       style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefHeight="40"
                       style="-fx-background-radius: 10; -fx-border-radius: 10;"/>

        <Button fx:id="registerButton" text="Register" prefWidth="200" prefHeight="40"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"
                onAction="#handleRegister"/>

        <Button fx:id="backButton" text="Back" onAction="#backButtonActionPerformed"
                prefWidth="100" style="-fx-background-color: #2E8B57; -fx-text-fill: white;"/>

        <Label fx:id="statusLabel" textFill="red" style="-fx-font-size: 14px;"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" style="-fx-font-size: 14px;"/>
            <Hyperlink text="Login" onAction="#goToLogin" style="-fx-font-size: 14px;"/>
        </HBox>
    </VBox>
</StackPane>
