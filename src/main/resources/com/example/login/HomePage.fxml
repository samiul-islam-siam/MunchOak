<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.login.controllers.HomePageController">

    <top>
        <Label text="🍽 Welcome to Munchoak" style="-fx-font-size: 28; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Explore our restaurant system below!" style="-fx-font-size: 18;"/>

            <Button text="🔍 Explore Menu (Demo)" onAction="#onExploreClicked"/>
            <Button text="🔐 Login" onAction="#onLoginClicked"/>
            <Button text="📝 Signup" onAction="#onSignupClicked"/>
        </VBox>
    </center>

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
</BorderPane>
