<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.login.LoginController"
           prefWidth="800" prefHeight="600"
           style="-fx-background-color: transparent;">

    <!-- Full Background Image -->
    <ImageView fitWidth="800" fitHeight="600"
               preserveRatio="false" smooth="true">
        <image>
            <Image url="@images/lo_bg.jpg"/>
        </image>
    </ImageView>

    <!-- Centered Login Box -->
    <VBox spacing="15" alignment="CENTER"
          translateY="6"
          style="-fx-background-color: rgba(0, 0, 0, 0.35);
                 -fx-padding: 30;
                 -fx-background-radius: 20;">

        <Label text="User Login"
               style="-fx-font-size: 30; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <HBox spacing="15" alignment="CENTER">
            <Label text="Username:" style="-fx-text-fill: red; -fx-font-size: 16;"/>
            <TextField fx:id="userNameField" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Password:" style="-fx-text-fill: red; -fx-font-size: 16;"/>
            <PasswordField fx:id="passwordField" prefWidth="200"/>
        </HBox>

        <HBox spacing="30" alignment="CENTER">
            <Button fx:id="loginButton" text="Login" onAction="#loginButtonActionPerformed"
                    prefWidth="100" style="-fx-background-color: #2E8B57; -fx-text-fill: white;"/>
            <Button fx:id="registerButton" text="Register" onAction="#registerButtonActionPerformed"
                    prefWidth="100" style="-fx-background-color: #4682B4; -fx-text-fill: white;"/>
        </HBox>

    </VBox>
</StackPane>
