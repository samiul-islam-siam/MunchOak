<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.login.SignupController"
            prefHeight="300" prefWidth="400"
            style="-fx-background-color: #f4f4f4;">

    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="50" prefWidth="300">
            <Label text="Sign Up" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Username"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <ChoiceBox fx:id="roleChoiceBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="user"/>
                        <String fx:value="admin"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
            <Button text="Register" onAction="#handleSignup"/>
            <Button text="Back to Login" onAction="#goToLogin"/>
            <Label fx:id="messageLabel" textFill="green"/>
        </VBox>
    </children>
</AnchorPane>
