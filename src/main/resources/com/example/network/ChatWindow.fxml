<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.network.ChatClient"
            prefWidth="400" prefHeight="500"
            style="-fx-background-color: #f5f5f5;">

    <children>

        <!-- Close Button -->
        <Button fx:id="closeButton" text="Close"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                layoutX="10" layoutY="10" prefWidth="70"/>

        <!-- Chat Area moved DOWN to make space for back button -->
        <TextArea fx:id="chatArea" editable="false" wrapText="true"
                  prefHeight="390" prefWidth="380"
                  layoutX="10" layoutY="50"
                  style="-fx-control-inner-background: white; -fx-font-size: 14px;"/>

        <TextField fx:id="messageField"
                   layoutX="10" layoutY="450"
                   prefWidth="300"
                   promptText="Type a message..."/>

        <Button fx:id="sendButton"
                layoutX="320" layoutY="450"
                prefWidth="70"
                text="Send"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>

    </children>

</AnchorPane>
